<h1>Listing ItemCategory</h1>
<table>
  <thead>
  <% if params[:notice].present? %>
    <h3 class="notice_message"><%= params[:notice] %></h3>
  <% end %>
  <tr>
    <th>ItemCategoryID</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @item_categories.each do |item_category| %>
    <tr>
      <td><%= item_category.id %></td>
      <td><%= item_category.name %></td>
      <td><%= link_to "Show", item_category %></td>
      <td><%= link_to "Edit", edit_item_category_path(item_category) %></td>
      <td><%= link_to "Destroy", item_category, method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "New ItemCategory", new_item_category_path %>