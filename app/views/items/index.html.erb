<h1>Listing Items</h1>
<table>
  <thead>
  <% if params[:notice].present? %>
    <h3 class="notice_message"><%= params[:notice] %></h3>
  <% end %>
  <tr>
    <th>ItemID</th>
    <th>ItemCategoryID</th>
    <th>Name</th>
    <th>Rate</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.item_category_id %></td>
      <td><%= item.name %></td>
      <td><%= item.rate %></td>
      <td><%= link_to "Show",item %></td>
      <td><%= link_to "Edit", edit_item_path(item) %></td>
      <td><%= link_to "Destroy", item, method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Item", new_item_path %>